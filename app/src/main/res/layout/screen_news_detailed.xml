<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_back"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10sp"
            android:src="@drawable/ic_arrow_back_white"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Новости"
            android:textColor="@color/hint"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10sp"
            android:src="@drawable/ic_icon_size_fonts"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10sp"
            android:src="@drawable/ic_icon_share"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10sp"
            android:src="@drawable/ic_mark"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Анастасия Ковальт"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="09:32 Сегодня"
                            android:textColor="@color/hint"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/cardStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/rounded_green_card"
                        android:drawableStart="@drawable/ic_star"
                        android:paddingStart="11dp"
                        android:paddingEnd="14sp"
                        android:text="Здоровье"
                        android:textColor="@color/white"
                        android:translationZ="0dp" />

                    <TextView
                        style="@style/cardStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:background="@drawable/rounded_blue_card"
                        android:drawableStart="@drawable/ic_business"
                        android:paddingStart="11dp"
                        android:paddingEnd="14sp"
                        android:text="Бизнес"
                        android:textColor="@color/white"
                        android:translationZ="0dp" />
                </LinearLayout>

                <TextView
                    style="@style/titleStyle"
                    android:layout_marginTop="6dp"
                    android:text="Как ставить цели правильно" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9sp"
                    android:layout_marginEnd="15dp"
                    android:text="Занимайтесь три-четыре дня в неделю. Вместе с разминкой и растяжкой тренировка займёт около 40 минут."
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/eventsback"
                    tools:ignore="ContentDescription" />

                <TextView
                    style="@style/titleStyle"
                    android:text="Цель. Что это?" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9sp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/temp_text4"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/news_detail"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Источник:"
                        android:textColor="@color/hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/mai_sai"
                        android:textColor="@color/hint"
                        android:textColorHint="@color/blue" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/gradient_blue_purple"
                    android:gravity="center_vertical"
                    android:paddingStart="18sp"
                    android:paddingEnd="18sp"
                    android:text="Понравилась новость?"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/titleStyle"
                    android:layout_marginBottom="8dp"
                    android:text="Читай далее" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <com.snatap.myway.utils.views.RoundImageView
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/item_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16sp"
                        android:lineHeight="22sp"
                        android:text="Приоритеты - наше все!\nКак начать действовать."
                        android:textColor="@color/text"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_blue_card"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="28sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Хочешь заработать монетки? "
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:text="Ответь правильно на вопросы и заработай бонусы!"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="18sp"
                    android:background="@drawable/rounded_stroke_white_card"
                    android:gravity="center"
                    android:text="Участвовать"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <include layout="@layout/content_comments" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>