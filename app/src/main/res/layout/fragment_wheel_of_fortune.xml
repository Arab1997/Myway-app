<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/screenStyle"
        android:paddingBottom="24dp">

        <include layout="@layout/content_rounded_toolbar_events" />

        <me.sujanpoudel.wheelview.WheelView
            android:id="@+id/wheel_view"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:layout_margin="16dp"
            app:wheelAnchorAngle="270"
            app:wheelAnimationDuration="800"
            app:wheelArcBackgroundColor="#F7F8FB"
            app:wheelCenterIcon="@drawable/group1360"
            app:wheelCenterIconPadding="16dp"
            app:wheelCenterIconTint="@color/white"
            app:wheelDividerStrokeWidth="16dp"
            app:wheelMode="ANIMATE_TO_ANCHOR"
            app:wheelSelectedArcBackgroundColor="#FE6447"
            app:wheelSelectedTextColor="#FFF"
            app:wheelStartAngle="315"
            app:wheelTextColor="#000000"
            app:wheelTextSize="16sp" />
        <TextView
            android:id="@+id/twist"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_blue_card"
            android:gravity="center_vertical"
            android:text="Крутить"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

        <com.hsalf.smileyrating.SmileyRating
            android:id="@+id/smile_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/twist2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="1 попытка без членства в Cообществе My Way "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />


        <com.hsalf.smileyrating.SmileyRating
            android:id="@+id/smile_rating2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="5 попыток с членством в Cообществе My Way "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAllFriend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_all_friends" />


        <TextView
            android:id="@+id/enter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_red_card_gradient"
            android:gravity="center_vertical"
            android:text="Стать Членом Сообщества"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>