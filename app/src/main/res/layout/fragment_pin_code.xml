<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_pf"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="14sp"
    android:paddingBottom="40dp">

    <TextView
        android:id="@+id/initial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Создай свой код-пароль для входа"
        android:textColor="@color/text"
        android:textSize="14sp" />

    <com.snatap.myway.utils.views.pincode.PinCodeView
        android:id="@+id/codeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="Повтори пароль"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <com.snatap.myway.utils.views.pincode.PinCodeView
        android:id="@+id/confirmCodeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_1"
            style="@style/PFLockScreenButtonStyle"
            android:text="1" />

        <TextView
            android:id="@+id/button_2"
            style="@style/PFLockScreenButtonStyle"
            android:text="2" />

        <TextView
            android:id="@+id/button_3"
            style="@style/PFLockScreenButtonStyle"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_4"
            style="@style/PFLockScreenButtonStyle"
            android:text="4" />

        <TextView
            android:id="@+id/button_5"
            style="@style/PFLockScreenButtonStyle"
            android:text="5" />

        <TextView
            android:id="@+id/button_6"
            style="@style/PFLockScreenButtonStyle"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_7"
            style="@style/PFLockScreenButtonStyle"
            android:text="7" />

        <TextView
            android:id="@+id/button_8"
            style="@style/PFLockScreenButtonStyle"
            android:text="8" />

        <TextView
            android:id="@+id/button_9"
            style="@style/PFLockScreenButtonStyle"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leftBtn"
            style="@style/PFLockScreenButtonStyle"
            android:layout_weight="1"
            android:background="@drawable/side_button_background_pf"
            android:text="Cброс"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/button_0"
            style="@style/PFLockScreenButtonStyle"
            android:layout_gravity="center"
            android:text="0" />

        <ImageView
            android:id="@+id/deleteBtn"
            style="@style/PFLockScreenButtonStyle"
            android:layout_weight="1"
            android:background="@drawable/side_button_background_pf"
            android:padding="20sp"
            android:src="@drawable/delete_lockscreen_pf" />

    </LinearLayout>
</LinearLayout>
