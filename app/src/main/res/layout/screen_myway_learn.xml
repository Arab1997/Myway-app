        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/backStyle">
    <include
        android:id="@+id/toolbar"
        layout="@layout/content_rounded_toolbar" />
        <androidx.core.widget.NestedScrollView
            style="@style/backStyle"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/cardStyle"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/rounded_light_blue_card"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.snatap.myway.utils.views.RoundImageView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img11"
                            app:rect_radius="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/inter_bold"
                                    android:text="20 Июля - 23 Июля "
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/inter_bold"
                                    android:text="Как найти баланс?"
                                    android:textColor="@color/gray_70_hint"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="45dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/ic_right_gray"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

