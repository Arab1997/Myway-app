<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backStyle"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_back"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="События"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/cart"
            android:padding="10sp"
            android:src="@drawable/ic_message"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:padding="10sp"
            android:src="@drawable/ic_cart"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter"
            style="@style/cardStyle"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_filter"
            android:paddingStart="11dp"
            android:paddingEnd="15dp"
            android:text="Фильтры" />

        <TextView
            android:id="@+id/tickets"
            style="@style/cardStyle"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_ticket"
            android:paddingStart="11dp"
            android:paddingEnd="15dp"
            android:text="Мои билеты" />
    </LinearLayout>

    <com.snatap.myway.utils.views.KKViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.rd.PageIndicatorView
        android:id="@+id/pager_indicator_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:piv_animationType="worm"
        app:piv_interactiveAnimation="true"
        app:piv_padding="12dp"
        app:piv_radius="3dp"
        app:piv_selectedColor="@color/red"
        app:piv_unselectedColor="@color/hint"
        app:piv_viewPager="@id/pager" />

</LinearLayout>