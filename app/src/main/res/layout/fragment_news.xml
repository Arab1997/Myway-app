<?xml version="1.0" encoding="utf-8"?>
<com.snatap.myway.utils.views.MySwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    style="@style/backStyle">

    <androidx.core.widget.NestedScrollView
        style="@style/backStyle"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_news_rounded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/filter"
                    style="@style/cardStyle"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_filter"
                    android:paddingStart="11dp"
                    android:paddingEnd="15dp"
                    android:text="Фильтры"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/cardStyle"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/favorites"
                        style="@style/cardStyle"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:background="@color/white10"
                        android:drawableStart="@drawable/ic_mark"
                        android:paddingStart="11dp"
                        android:paddingEnd="15dp"
                        android:text="Моя подборка"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/favCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10sp"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_news" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.snatap.myway.utils.views.MySwipeRefreshLayout>
