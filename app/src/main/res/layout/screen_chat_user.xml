<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backStyle">

    <LinearLayout
        style="@style/elevationStyle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/toolbar_back"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:translationZ="5dp">

        <ImageView
            android:id="@+id/back"
            style="@style/imgStyle"
            android:layout_marginStart="13sp"
            android:src="@drawable/ic_arrow_back_white"
            tools:ignore="ContentDescription" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatImg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chatName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Анастасия Сергеева"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/chatDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Анастасия Сергеева"
                android:textColor="@color/white50"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/more"
            style="@style/imgStyle"
            android:layout_marginEnd="13sp"
            android:src="@drawable/ic_baseline_more_horiz_24"
            android:tint="@color/white"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_message_server" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:translationZ="5dp">

        <EditText
            android:id="@+id/messageEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="Введите сообщение"
            android:inputType="textMultiLine"
            android:padding="15sp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="15sp"
            tools:ignore="Autofill" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:paddingStart="15dp"
            android:paddingTop="6dp"
            android:paddingEnd="15dp"
            android:paddingBottom="6dp">

            <ImageView
                android:id="@+id/attach"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_light_blue_card"
                android:contentDescription="@string/icon"
                android:padding="5dp"
                android:src="@drawable/ic_message_add" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/attach"
                android:background="@drawable/rounded_light_blue_card"
                android:contentDescription="@string/icon"
                android:padding="5dp"
                android:src="@drawable/ic_camera" />

            <TextView
                android:id="@+id/send"
                android:layout_width="120dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_light_blue_card"
                android:gravity="center"
                android:text="Отправить"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>