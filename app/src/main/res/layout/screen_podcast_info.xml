<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle">

    <LinearLayout
        style="@style/screenStyle">

        <include
            layout="@layout/content_rounded_toolbar_info"/>

        <RelativeLayout
            android:layout_marginTop="-90dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_gradient_blue_card">
            
            <TextView
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:textAlignment="center"
                android:layout_marginTop="105dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_50_opacity"
                android:textSize="12sp"
                android:text="Это подкаст история. Моя история. Когда-то давно я бросила карьеру и уехала на Бали целых семь лет."/>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="-150dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/rounded_black_card"/>

        <TextView
            style="@style/titleStyle"
            android:text="23 выпуска"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChapters"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_podcast_chapter"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>