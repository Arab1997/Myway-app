<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="screenStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="backStyle" parent="screenStyle">
        <item name="android:background">@color/back</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_white_rounded</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">257dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/rounded_red_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="whiteButtonStyle" parent="buttonStyle">
        <item name="android:background">@drawable/rounded_white_card</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editTextHintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="edtStyle">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/rounded_edt_card</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="imgStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="elevationStyle">
        <item name="android:translationZ">3sp</item>
        <item name="android:elevation">3sp</item>
    </style>

    <style name="cardStyle" parent="elevationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:background">@drawable/rounded_white_card</item>
        <item name="android:drawablePadding">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">24sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PFLockScreenButtonStyle">
        <item name="android:textColor">@color/key</item>
        <item name="android:background">@drawable/key_foreground</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PFCheckBox">
        <item name="android:src">@drawable/code_selector_pf</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="TabCustomLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabCustomText</item>
    </style>

    <style name="tabCustomText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
