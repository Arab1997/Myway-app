<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="screenStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="backStyle" parent="screenStyle">
        <item name="android:background">@color/back</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_white_rounded</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">257dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/rounded_red_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="whiteButtonStyle" parent="buttonStyle">
        <item name="android:background">@drawable/rounded_white_card</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="editTextHintStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="edtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/rounded_hint_card</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="lockStyle">
        <item name="pf_key_button">@style/MyLockScreenButtonStyle</item>
        <item name="pf_fingerprint_button">@style/MyLockScreenFingerprintButtonStyle</item>
        <item name="pf_delete_button">@style/MyLockScreenDeleteButtonStyle</item>
        <item name="pf_code_view">@style/MyLockScreenCodeStyle</item>
    </style>

    <style name="MyLockScreenButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/rounded_hint_card</item>
    </style>

    <style name="MyLockScreenFingerprintButtonStyle">
        <item name="android:src">@drawable/ic_touch_id</item>
    </style>

    <style name="MyLockScreenDeleteButtonStyle">
        <item name="android:src">@drawable/ic_delete_code</item>
    </style>

    <style name="MyLockScreenCodeStyle">
        <item name="android:button">@drawable/ic_not_checked_dot</item>
    </style>

    <style name="MyLockNextButtonStyle">
        <item name="android:textColor">#9FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>
