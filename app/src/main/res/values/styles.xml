<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ScreenStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="GrayScreenStyle" parent="ScreenStyle">
        <item name="android:background">@color/back</item>
    </style>

    <style name="BottomSheetScreenStyle" parent="ScreenStyle">
        <item name="android:background">@drawable/bottom_sheet_white_rounded</item>
    </style>

    <style name="AddressTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="EditProfileTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#C5C4CC</item>
        <item name="android:textColorHint">#C5C4CC</item>
        <item name="hintEnabled">false</item>
        <item name="colorControlNormal">#C5C4CC</item>
        <item name="colorControlActivated">#C5C4CC</item>
        <item name="colorControlHighlight">#C5C4CC</item>
        <item name="android:backgroundTint">#C5C4CC</item>
    </style>

    <style name="OtherTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:backgroundTint">@android:color/white</item>
    </style>

    <style name="PhoneTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#C5C4CC</item>
        <item name="colorControlNormal">#C5C4CC</item>
        <item name="hintEnabled">false</item>
        <item name="colorControlActivated">#C5C4CC</item>
        <item name="colorControlHighlight">#C5C4CC</item>
        <item name="android:backgroundTint">#C5C4CC</item>
    </style>

    <style name="BottomSheet" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/bottom_sheet_white_rounded</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ProfileMenuNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:drawableEnd">@drawable/arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InfoMenuNavigation" parent="ProfileMenuNavigation">
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileMenuHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/rounded_violet_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:translationZ">4dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DisabledButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/rounded_gray_card</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
